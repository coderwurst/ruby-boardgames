<%= form_with(model: boardgame, local: true) do |form| %>
  <% if boardgame.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(boardgame.errors.count, "error") %> prohibited this boardgame from being saved:</h2>

      <ul>
      <% boardgame.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= form.label :name, class: 'mdl-textfield__label' %>
    <%= form.text_field :name, id: :boardgame_name, class: 'mdl-textfield__input' %>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= form.label :rating, class: 'mdl-textfield__label' %>
    <%= form.text_field :rating, id: :boardgame_rating, class: 'mdl-textfield__input' %>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= form.label :minplayer, class: 'mdl-textfield__label' %>
    <%= form.text_field :minplayer, id: :boardgame_minplayer, class: 'mdl-textfield__input' %>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= form.label :maxplayer, class: 'mdl-textfield__label' %>
    <%= form.text_field :maxplayer, id: :boardgame_maxplayer, class: 'mdl-textfield__input' %>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= form.label :duration, class: 'mdl-textfield__label' %>
    <%= form.text_field :duration, id: :boardgame_duration, class: 'mdl-textfield__input' %>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= form.label :owner, class: 'mdl-textfield__label' %>
    <%= form.text_field :owner, id: :boardgame_owner, class: 'mdl-textfield__input' %>
  </div>

  <div class="action">
    <%= form.submit 'SAVE', class: 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' %>
  </div>
<% end %>
